<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemListActivity">

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.myapplication.ItemFragment"
        android:label="ItemFragment"
        tools:layout="@layout/item">

        <action
            android:id="@+id/action_itemFragment_to_itemAddEditFragment"
            app:destination="@id/itemAddEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/itemAddEditFragment"
        android:name="com.example.myapplication.ItemAddEditFragment"
        android:label="ItemAddEditFragment"
        tools:layout="@layout/fragment_item_add_edit">
        <argument
            android:name="Item"
            android:defaultValue="@null"
            app:argType="com.example.myapplication.Item"
            app:nullable="true" />
    </fragment>

    <activity
        android:id="@+id/itemListActivity"
        android:name="com.example.myapplication.ItemListActivity"
        android:label="activity_item_list"
        tools:layout="@layout/activity_item_list" />

</navigation>